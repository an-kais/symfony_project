{% extends 'base.html.twig' %}

{% block title %}Lecturer index{% endblock %}

{% block body %}
    <h1>Lecturer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Surname</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecturer in lecturers %}
            <tr>
                <td>{{ lecturer.id }}</td>
                <td>{{ lecturer.surname }}</td>
                <td>{{ lecturer.name }}</td>
                <td>
                    <a href="{{ path('lecturer_show', {'id': lecturer.id}) }}">show</a>
                    <a href="{{ path('lecturer_edit', {'id': lecturer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lecturer_new') }}">Create new</a>
{% endblock %}
